      "downloads": 25300,
      "rating": 4.9,
      "features": ["文件读写", "目录遍历", "权限管理", "文件搜索"]
    },
    "fetch": {
      "name": "Fetch",
      "package": "@anthropic-ai/mcp-server-fetch",
      "source": "npm",
      "description": "HTTP请求和API调用",
      "category": "web",
      "downloads": 22100,
